    <script>
        let successChartInstance = null;

        const updateSuccessChart = (activeTab) => {
            const chartData = {
                labels: ['Tasa de Éxito (%)'],
                datasets: [{
                    label: 'Lip Sync',
                    data: [58],
                    backgroundColor: '#d4d4d4',
                    borderColor: '#a3a3a3',
                    borderWidth: 1
                }, {
                    label: 'Transiciones',
                    data: [72],
                    backgroundColor: '#d4d4d4',
                    borderColor: '#a3a3a3',
                    borderWidth: 1
                }]
            };

            const backgroundColors = {
                'lip-sync': ['#ef4444', '#d4d4d4'],
                'transicion': ['#d4d4d4', '#ef4444']
            };

            chartData.datasets[0].backgroundColor = backgroundColors[activeTab][0];
            chartData.datasets[1].backgroundColor = backgroundColors[activeTab][1];

            if (successChartInstance) {
                successChartInstance.data = chartData;
                successChartInstance.update();
            } else {
                const ctx = document.getElementById('successChart').getContext('2d');
                successChartInstance = new Chart(ctx, {
                    type: 'bar',
                    data: chartData,
                    options: {
                        indexAxis: 'y',
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                max: 100
                            },
                            x: {
                                grid: {
                                    display: false
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                display: true,
                                position: 'bottom'
                            }
                        }
                    }
                });
            }
        };

        document.addEventListener('DOMContentLoaded', function () {
            const tabs = document.querySelectorAll('.tab-btn');
            const panes = document.querySelectorAll('.tab-pane');

            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    tabs.forEach(t => t.classList.remove('active'));
                    tab.classList.add('active');

                    panes.forEach(pane => {
                        pane.classList.add('hidden');
                        if (pane.id === tab.dataset.tab) {
                            pane.classList.remove('hidden');
                        }
                    });
                    updateSuccessChart(tab.dataset.tab);
                });
            });

            updateSuccessChart('lip-sync');
            
            const plataformasData = {
                labels: ['TikTok', 'Spotify', 'YouTube', 'Instagram', 'Radio', 'Friends'],
                datasets: [{
                    label: 'Porcentaje de Preferencia (%)',
                    data: [38, 30, 15, 10, 5, 2.5],
                    backgroundColor: ['#ef4444', '#a3a3a3', '#d4d4d4', '#a3a3a3', '#d4d4d4', '#a3a3a3'],
                    borderColor: ['#b91c1c', '#737373', '#a3a3a3', '#737373', '#a3a3a3', '#737373'],
                    borderWidth: 1
                }]
            };
            
            const demografiaData = {
                labels: ['18-24', '25-34', '35-44', '45-54', '55+'],
                datasets: [{
                    label: 'Porcentaje de Usuarios (%)',
                    data: [30, 33, 15, 8, 7],
                    backgroundColor: ['#ef4444', '#a3a3a3', '#d4d4d4', '#a3a3a3', '#d4d4d4'],
                    borderColor: ['#b91c1c', '#737373', '#a3a3a3', '#737373', '#a3a3a3'],
                    borderWidth: 1
                }]
            };

            new Chart(document.getElementById('plataformasChart').getContext('2d'), {
                type: 'bar',
                data: plataformasData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: { y: { beginAtZero: true } },
                    plugins: { legend: { display: false } }
                }
            });
            
            new Chart(document.getElementById('demografiaChart').getContext('2d'), {
                type: 'bar',
                data: demografiaData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: { y: { beginAtZero: true } },
                    plugins: { legend: { display: false } }
                }
            });
        });
    </script>
